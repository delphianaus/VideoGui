<Window x:Name="frmImport" x:Class="VideoGui.MediaImporter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGui" Loaded="Window_Loaded" 
       xmlns:MSU="clr-namespace:CustomComponents.ListBoxExtensions;assembly=CustomComponents"
        mc:Ignorable="d" WindowStartupLocation="Manual" WindowStyle="ToolWindow" 
        Title="Media Importer" Height="370" Width="724" SizeChanged="frmImport_SizeChanged">
    <ScrollViewer x:Name="MainScroller" VerticalScrollBarVisibility="Hidden" 
               HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid Margin="0,0,0,0" x:Name="MainGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Width="723" Height="349">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Loading Panel -->
                <RowDefinition Height="Auto"/>
                <!-- Main Content -->
            </Grid.RowDefinitions>
            <Canvas x:Name="LoadingPanel" Height="349" d:Height="0" 
                HorizontalAlignment="Center" Width="723" 
                VerticalAlignment="Top">
                <TextBlock Text="Loading..." FontSize="24" Canvas.Left="311.5" Canvas.Top="141"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" HorizontalAlignment="Left" Canvas.Top="178" 
                             VerticalAlignment="Center" Canvas.Left="261.5"/>
            </Canvas>
            <Canvas x:Name="MainContent" Grid.Row="1" Height="349" 
        HorizontalAlignment="Center" Width="723" VerticalAlignment="Top">
                <Border x:Name="brdFileInfo" BorderThickness="2" BorderBrush="Black" Height="52" 
                VerticalAlignment="Top" Margin="4,2,4,0" Width="715" 
                    HorizontalAlignment="Left" Canvas.Top="0" Canvas.Left="0">
                    <Canvas x:Name="CnvMedialElements">
                        <Label Content="Source Directory" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Canvas.Left="9" Canvas.Top="9"/>
                        <TextBox x:Name="txtsrcdir" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="556" Canvas.Left="120" Canvas.Top="13"/>
                        <Button x:Name="btnSelectSourceDir" HorizontalAlignment="Center" VerticalAlignment="Top" Width="20" Height="20" Canvas.Left="686" Canvas.Top="12" Click="btnSelectSourceDir_Click" RenderTransformOrigin="-13.634,1.02" />
                    </Canvas>
                </Border>
                <MSU:MultiListbox x:Name="msuSchedules" ItemHeight="15"
           Header="Media" Width="625" Canvas.Top="5" 
           VerticalAlignment="Top" VerticalContentAlignment="Bottom" 
           BorderBrush="Black" BorderThickness="2" Height="236" 
           HorizontalAlignment="Left" Canvas.Left="0" Margin="2,49,0,0">
                    <MSU:MultiListbox.ColumnDefinitions>
                        <MSU:MultiListboxColumnDefinition DataField="FileName" Width="140" 
                         ContentVerticalAlignment="Top" HeaderText="FileName" ComponentType="TextBlock"/>
                        <MSU:MultiListboxColumnDefinition HeaderText="First FrameTime" 
                  ContentVerticalAlignment="Top" 
                  DataField="TimeData" Width="105" ComponentType="TextBlock"/>
                        <MSU:MultiListboxColumnDefinition HeaderText="Suggested Filename" 
                  ContentHorizontalAlignment="Center"  DataField="NewFile" ContentVerticalAlignment="Top"
                  Width="140" ComponentType="TextBlock"/>
                    </MSU:MultiListbox.ColumnDefinitions>
                    <MSU:MultiListbox.ItemsContextMenu>
                        <ContextMenu>
                            <MenuItem IsCheckable="True" IsChecked="False" Header="Selecy/Deslect Time To Filter From " Click="mnuFilterFrom_Click"/>
                            <MenuItem IsCheckable="True" IsChecked="False" Header="Selecy/Deslect Time To Filter" Click="mnuFilterTo_Click" />
                            <MenuItem Header="Clear Filters" Click="mnuClearFilters_Click"/>
                            <Separator/>
                            <MenuItem Header="Select From Date" Click="mnuSelectDateFrom_Click"/>
                            <MenuItem Header="Select To Date" Click="mnuSelectDateTo_Click"/>
                            <Separator/>
                            <MenuItem Header="Move Selected Files" Click="mnuMoveSelected_Click"/>
                            <Separator/>
                            <MenuItem Header="Select All" Click="mnuSelectAll_Click"/>
                        </ContextMenu>
                    </MSU:MultiListbox.ItemsContextMenu>
                </MSU:MultiListbox>
                <Canvas x:Name="brdt2" Canvas.Left="631" Canvas.Top="60">
                    <Border x:Name="brdTControls" BorderThickness="2" BorderBrush="Black" Width="87" Height="229" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,1" Canvas.Left="0" Canvas.Top="0">
                        <Canvas x:Name="cnvControls" Height="235" Width="84" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Button x:Name="btnClear" Content="Clear Filter" Width="70" Height="21" Click="btnClear_Click" HorizontalAlignment="Left" Canvas.Top="8" VerticalAlignment="Top" Canvas.Left="6"/>
                            <ContentControl x:Name="labelstartevents" MouseDoubleClick="labelstartevents_MouseDoubleClick" Canvas.Left="6" Canvas.Top="36" HorizontalAlignment="Center" VerticalAlignment="Top">
                                <Label x:Name="lblStart" Content="Start :" Canvas.Left="6" Canvas.Top="74" 
                                           HorizontalAlignment="Left" VerticalAlignment="Center" Width="67" Height="25"/>
                            </ContentControl>
                            <TextBox x:Name="txtStart" Canvas.Left="6" TextWrapping="Wrap" Canvas.Top="65" Width="51" KeyUp="txtStart_KeyUp" Text="00:00:00" />
                            <ContentControl x:Name="labelendevents" MouseDoubleClick="labelendevents_MouseDoubleClick" Canvas.Left="7" Canvas.Top="90" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Label Content="End :" Canvas.Left="6" Canvas.Top="64" Width="67" Height="25" 
                                           HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            </ContentControl>
                            <TextBox x:Name="txtEnd" Canvas.Left="6" TextWrapping="Wrap" Canvas.Top="119" Width="51" HorizontalAlignment="Center" VerticalAlignment="Top" KeyUp="txtEnd_KeyUp"/>
                            <Button x:Name="btnSelectAll" Content="Select All" Width="70" Height="21" Click="btnSelectAll_Click" Canvas.Top="146" Canvas.Left="6" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <Button x:Name="btnMove" Content="Move" Width="70" Height="21" Click="btnMove_Click" Canvas.Top="176" Canvas.Left="6" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <Button x:Name="btntartSelector" Content="" Canvas.Left="60" Canvas.Top="64" HorizontalAlignment="Left" VerticalAlignment="Center" Width="19" Height="18" Click="btntartSelector_Click"/>
                            <Button x:Name="btnEndSelector" Content="" Canvas.Left="60" Canvas.Top="119" HorizontalAlignment="Left" VerticalAlignment="Center" Width="19" Height="18" Click="btnEndSelector_Click"/>
                        </Canvas>
                    </Border>
                </Canvas>
                <Border x:Name="brdControls" BorderBrush="Black" BorderThickness="2" Height="54" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom" Margin="4,0,4,3" Canvas.Top="295" Width="717">
                    <Canvas x:Name="cnvcontrols" Margin="0,0,-2,0" VerticalAlignment="Top">
                        <Button x:Name="btnRename" IsEnabled="False" HorizontalAlignment="Center" Content="Rename ALL" Width="90" Height="30" Click="btnRename_Click" Canvas.Left="14" Canvas.Top="10" VerticalAlignment="Top"/>
                        <Button x:Name="btnClose" Content="Close" Width="90" Height="30" Click="btnClose_Click" HorizontalAlignment="Center" Canvas.Left="609" Canvas.Top="10" VerticalAlignment="Top" RenderTransformOrigin="0.556,0.446"/>
                    </Canvas>
                </Border>
            </Canvas>
        </Grid>
    </ScrollViewer>
</Window>
