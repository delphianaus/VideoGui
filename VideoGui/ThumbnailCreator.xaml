<Window x:Class="VideoGui.ThumbnailCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGui" 
        
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" 
        WindowStyle="ToolWindow" 
        Title="Thumbnail Creator" Height="645" 
        HorizontalAlignment="Right" Width="970">
    <Grid >
        <Border x:Name="brdImg" BorderBrush="Black" BorderThickness="2" Height="314" Width="385"
                Margin="5,7,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image x:Name="srcImage" Margin="1,1,1,1" MinWidth="383" MinHeight="312"
                   MouseMove="srcImage_MouseMove" MouseDown="srcImage_MouseDown" MouseUp="srcImage_MouseUp" />
        </Border>
        <Border x:Name="brdImg2" BorderBrush="Black" BorderThickness="2" Height="314" Width="558"
        Margin="395,7,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image x:Name="srcImageClip" Margin="1,1,1,1" MinWidth="383" MinHeight="312" 
                   MouseMove="srcImage_MouseMove"/>
        </Border>
        <Button x:Name="btnSelectImage" Content="Select Image" Width="102" Height="30" 
                Click="btnSelectImage_Click" HorizontalAlignment="Left" 
                Margin="10,330,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnClose" Content="Close" Width="140" Height="34"
                Click="btnClose_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,6,6"/>
        <TextBlock x:Name="txtImage" Text="img" Width="490" Height="26" HorizontalAlignment="Left"
                   VerticalAlignment="Top" Margin="125,334,0,0"/>
        <Button x:Name="btnCrop" Content="Crop" Width="140" Height="30" 
            Margin="-5,328,6,0" VerticalAlignment="Top" Click="btnCrop_Click" HorizontalAlignment="Right"/>
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="198" 
                Margin="10,364,0,0" VerticalAlignment="Top" Width="173">
            <Canvas >
                <RepeatButton  x:Name="btnUp2_Margin" Width="24" Height="24" Canvas.Left="56" Canvas.Top="7" 
                    Delay="500" Interval="100" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Up_Click"  >
                    <Image x:Name="imgUp2"  Source="/Icons/upArrow.png"/>
                </RepeatButton>
                <RepeatButton  x:Name="btnDown2_Margin" Width="24" Height="24" 
                 HorizontalAlignment="Left" Delay="500" Interval="100"
                    Canvas.Left="121" VerticalAlignment="Center" Canvas.Top="6" Click="Down_Click">
                    <Image x:Name="imgDown4"  Source="/Icons/downArrow.png"/>
                </RepeatButton>
                <Label x:Name="lblMargin2" Content="Margin" Canvas.Top="5"/>
                <TextBox x:Name="txtMargin" Text="67" Width="34" Canvas.Left="84" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="9" />
                <Label x:Name="lblMargin_Copy1" Content="Top" Canvas.Top="48" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="0"/>
                <TextBox x:Name="txtTop" Text="0" Width="34" Canvas.Left="84" Canvas.Top="52" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" />
                <RepeatButton  x:Name="btnUp_Top" Width="24" Delay="500" Interval="100" Height="24" Canvas.Left="56" Canvas.Top="49" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" Click="Up_Click">
                    <Image x:Name="imgUp6"  Source="/Icons/upArrow.png"/>
                </RepeatButton>
                <RepeatButton  x:Name="btnDown_Top" Delay="500" Interval="100" Width="24" Height="24" 
                    Canvas.Left="122" Canvas.Top="49" HorizontalAlignment="Left"
                    VerticalAlignment="Center" Click="Down_Click">
                    <Image x:Name="imgDown5"  Source="/Icons/downArrow.png"/>
                </RepeatButton>
                <Label x:Name="lblMargin_Copy4" Content="Left" Canvas.Top="90" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <RepeatButton  x:Name="btnUp_Left" Width="24" Delay="500" Interval="100" Height="24" Canvas.Left="56" Canvas.Top="91" 
                     HorizontalAlignment="Left" VerticalAlignment="Center" Click="Up_Click">
                    <Image x:Name="imgUp7"  Source="/Icons/upArrow.png"/>
                </RepeatButton>
                <TextBox x:Name="txtLeft" Text="0" Width="34" Canvas.Left="83" Canvas.Top="92" 
                    HorizontalAlignment="Center" VerticalAlignment="Top" />
                <RepeatButton  x:Name="btnDown_Left" Delay="500" Interval="100" Width="24" Height="24" 
                    Canvas.Left="123" Canvas.Top="91" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Down_Click">
                    <Image x:Name="imgDown6" Source="/Icons/downArrow.png"/>
                </RepeatButton>
                <CheckBox x:Name="chkAutoCrop" Content="Auto Crop" Canvas.Left="85" Canvas.Top="176" IsChecked="True"/>
                <Label x:Name="lblMargin_Copy5" Content="Step" Canvas.Top="148" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <RepeatButton x:Name="btnUp_Step" Width="24" Delay="500" Interval="100" Height="24" Canvas.Left="56" Canvas.Top="147" 
                     HorizontalAlignment="Center" VerticalAlignment="Top" Click="Up_Click">
                    <Image x:Name="imgUp8"  Source="/Icons/upArrow.png"/>
                </RepeatButton>
                <TextBox x:Name="txtStep" Text="1" Width="34" Canvas.Left="83" Canvas.Top="149" 
                    HorizontalAlignment="Center" VerticalAlignment="Top" />
                <RepeatButton x:Name="btnDown_Step" Width="24" Height="24" Delay="500" Interval="100"                     
                    Canvas.Left="123" Canvas.Top="146" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Down_Click">
                    <Image x:Name="imgDown1" Source="/Icons/downArrow.png" />  
                </RepeatButton>
                <Border x:Name="brd" Width="157" BorderThickness="2" BorderBrush="Black" Canvas.Top="128" Canvas.Left="5" Height="2"/>
                <Border x:Name="brd_Copy" Width="157" BorderThickness="2" BorderBrush="Black" Canvas.Top="80" Canvas.Left="5" Height="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Border x:Name="brd_Copy1" Width="157" BorderThickness="2" BorderBrush="Black" Canvas.Top="37" Canvas.Left="5" Height="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Canvas>

        </Border>
        <Border x:Name="brdTextControls" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="200" Margin="188,362,0,0" 
                VerticalAlignment="Top" Width="765">
            <Canvas>
                <Label Name="lblTextLine1" Content="Primary Text   :" Canvas.Top="6"  HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="6"/>
                <Label Name="lblTextLine2" Content="Secondary Text :" Canvas.Top="29" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBox x:Name="txtLine1" Width="439" Canvas.Left="102" Canvas.Top="10" 
                    HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center"  Height="18" />
                <TextBox x:Name="txtLine2" Width="439" Height="18" Canvas.Left="102" Canvas.Top="33" 
                    HorizontalAlignment="Center" VerticalAlignment="Top"  />
                <Button x:Name="btnPlaceText" Content="Place Txt" Width="95" Height="135" Canvas.Left="650" Canvas.Top="23" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnPlaceText_Click"/>
                <Label x:Name="lblFontsize1" Content="Font Size 1:" Canvas.Top="56" HorizontalAlignment="Center" VerticalAlignment="Top" Width="71" Canvas.Left="13"/>
                <TextBox x:Name="txtfFontSize1" Width="45" Height="18" Canvas.Left="84" Canvas.Top="60" 
                    HorizontalAlignment="Center" VerticalAlignment="Top"  />
                <Label x:Name="lblFontSize2" Content="Font Size 2:" Canvas.Top="56" Width="71" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="143"/>
                <TextBox x:Name="txtfFontSize2" Width="45" Height="18" Canvas.Left="214" Canvas.Top="60" 
                    HorizontalAlignment="Center" VerticalAlignment="Top"  />
                <Label x:Name="lblTextOffset1" Content="Text Offset 1" Canvas.Top="56" Width="82" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="270"/>
                <TextBox x:Name="txtfOffset1" Width="45" Height="18" Canvas.Left="358" Canvas.Top="60" 
                    HorizontalAlignment="Center" VerticalAlignment="Top"  />
                <Label x:Name="lblTextOffset2" Content="Text Offset 2:" Canvas.Top="56" Width="82" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="414"/>
                <TextBox x:Name="txtfOffset2" Width="45" Height="18" Canvas.Left="496" Canvas.Top="60" 
                    HorizontalAlignment="Center" VerticalAlignment="Top"  />
                <Button x:Name="btnFontSize1Up" Width="20" Height="20" Canvas.Left="84" Canvas.Top="82" Click="btnFontSize1Up_Click"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="imgFSUp"  Source="/Icons/UpArrow.png" />
                </Button>
                <Button x:Name="btnFontSize1Down" Width="20" Height="20" Canvas.Left="109" Canvas.Top="82" Click="btnFontSize1Down_Click"
                        HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Image x:Name="imgFSDown"  Source="/Icons/DownArrow.png" />
                </Button>
                <Button x:Name="btnFontSize2Up" Width="20" Height="20" Canvas.Left="214" Canvas.Top="83" Click="btnFontSize2Up_Click"
                        HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Image x:Name="imgFS2Up"  Source="/Icons/UpArrow.png"/>
                </Button>
                <Button x:Name="btnFontSize2Down" Width="20" Height="20" Canvas.Left="239" Canvas.Top="83" Click="btnFontSize2Down_Click"
                        HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Image x:Name="imgFS2Down"  Source="/Icons/DownArrow.png" />
                </Button>
                <Button x:Name="btnTextOffset1UP" Width="20" Height="20" Canvas.Left="358" Canvas.Top="82" Click="btnTextOffset1UP_Click"
                        HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image x:Name="imgTextoffset1Up"  Source="/Icons/UpArrow.png" />
                </Button>
                <Button x:Name="btnTextOffset1DOWN" Width="20" Height="20" Canvas.Left="383" Canvas.Top="82" Click="btnTextOffset1DOWN_Click"
                        HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image x:Name="imgTextOffset1Down"  Source="/Icons/DownArrow.png" />
                </Button>
                <Button x:Name="btnTextOffset2UP" Width="20" Height="20" Canvas.Left="497" Canvas.Top="83" Click="btnTextOffset2UP_Click"
                        HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image x:Name="imgTextOffset2Up"  Source="/Icons/UpArrow.png" />
                </Button>
                <Button x:Name="btnTextOffset2DOWN" Width="20" Height="20" Canvas.Left="522" Canvas.Top="83" Click="btnTextOffset2DOWN_Click" 
                        HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image x:Name="imgTextOffset2Down"  Source="/Icons/DownArrow.png" />
                </Button>
                <Label x:Name="lblTextLine2_Copy" Content="Save As :" Canvas.Top="115" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBox x:Name="txtOutputDir" Width="328" Height="18" Canvas.Left="57" Canvas.Top="119" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"  />
                <TextBox x:Name="txtNumThumbs" Width="33" Height="18" Canvas.Left="390" Canvas.Top="119" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"   />
                <TextBox x:Name="txtNumThumbs2" Width="33" Height="18" Canvas.Left="428" Canvas.Top="119" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"   />
            </Canvas>
        </Border>
        <Button x:Name="btnClose_Copy" Content="Save Template" Width="140" Height="34" HorizontalAlignment="Left"
            Margin="167,0,0,6" VerticalAlignment="Bottom"/>
        <Button x:Name="btnLoadTemplate" Content="Load Template" Width="140" Height="34" VerticalAlignment="Bottom"
            Margin="13,0,0,6" Click="btnLoadTemplate_Click" HorizontalAlignment="Left"/>
        <Button x:Name="btnSetOutput" Content="Set Output" Width="74" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="0,482,223,0" Click="btnSetOutput_Click"/>
        <Button x:Name="btnClose_Copy3" Content="Build Thumbnails" Width="140" Height="34" HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Margin="320,0,0,6" Click="btnClose_Copy3_Click"/>

    </Grid>
</Window>
