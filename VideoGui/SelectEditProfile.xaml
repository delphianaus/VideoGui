<Window x:Name="frmProfileSelectEdit" x:Class="VideoGui.SelectEditProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGui"
        mc:Ignorable="d"
        Title="Select/Edit Video Profile" Height="289" Width="404" Closing="frmProfileSelectEdit_Closing">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
        <StackPanel x:Name="FirstStkpnl" Orientation="Vertical" Height="228" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Height="176">
                <GroupBox x:Name="grpBitRates" Header="Bitrates" VerticalAlignment="Top" Height="151" Width="173">
                    <StackPanel Orientation="Vertical" Height="120" Margin="0,0,19,0">
                        <StackPanel Height="120" Width="140">
                            <StackPanel Height="40" Margin="0,0,0,0" Orientation="Horizontal" Width="228">
                                <StackPanel Height="40" Margin="0,0,0,0" HorizontalAlignment="Left" >
                                    <Label Content="Min" Height="22" Width ="84" HorizontalAlignment="Left" 
                                           FontSize="14" VerticalAlignment="Top" Padding="0,1,0,2"/>
                                </StackPanel>
                                <StackPanel Height="40" Margin="0,0,0,0" >
                                    <TextBox x:Name="txtMin" Text="675K" HorizontalAlignment="Left" 
                                             Height="28" Margin="0,0,0,0" TextWrapping="Wrap" Width="52" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Height="40" Margin="0,0,0,0" Orientation="Horizontal" Width="228">
                                <StackPanel Height="40" Margin="0,0,0,0" >
                                    <Label Content="Max" Height="24" Width ="84" HorizontalAlignment="Left" FontSize="14" Margin="0,1,0,3" Padding="0,1,0,0"/>
                                </StackPanel>
                                <StackPanel Height="40" Margin="0,0,0,0" >
                                    <TextBox x:Name="txtMax" Text="1150K" HorizontalAlignment="Left" Height="28" Margin="0,0,0,0" TextWrapping="Wrap" Width="47" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Height="40" Margin="0,0,0,0" Orientation="Horizontal" Width="228">
                                <StackPanel Height="40" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >
                                    <Label Content="Buffer" Height="24" Width ="84" HorizontalAlignment="Left" FontSize="14" Padding="0,0,0,0"/>
                                </StackPanel>
                                <StackPanel Height="40" Margin="0,0,0,0" >
                                    <TextBox x:Name="TxtBufferSize" Text="1200K" HorizontalAlignment="Left" Height="28" Margin="0,0,0,0" TextWrapping="Wrap" Width="50" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <StackPanel x:Name="MainStackPnl" VerticalAlignment="Top" Height="178">
                    <GroupBox Header="Resize To" HorizontalAlignment="Left" Height="149" Width="227" Margin="-1,0,0,0">
                        <StackPanel Height="200" Orientation="Vertical" Margin="0,0,-2,0">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel>
                                    <CheckBox x:Name="ChkEnabled" Content="Enable" FontSize="14" HorizontalAlignment="Left" Grid.IsSharedSizeScope="True" Padding="0,0,0,0" Width="77" IsChecked="True" VerticalContentAlignment="Center" Click="ChkEnabled_Click" />
                                </StackPanel>
                                <StackPanel>
                                    <CheckBox x:Name="ChkVSYNC" Content="VSYNC" FontSize="14" HorizontalAlignment="Left" Padding="0,0,0,0" Width="90" VerticalContentAlignment="Center" IsChecked="True" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel>
                                <CheckBox x:Name="ChkArScaling" Content="AR Scaling" FontSize="14" HorizontalAlignment="Left" Padding="0,-2,0,0" IsChecked="True" Width="176" VerticalContentAlignment="Center" Click="ChkArScaling_Click" />
                            </StackPanel>
                            <StackPanel Height="32" Orientation="Horizontal" Width="228">
                                <StackPanel Height="40" Margin="0,0,0,0" Orientation="Horizontal" Width="228">
                                    <StackPanel Height="40" Margin="0,0,0,0" >
                                        <Label Content="Width" Height="24" Width ="39" HorizontalAlignment="Left" FontSize="14" Margin="0,1,0,3" Padding="0,1,0,0"/>
                                    </StackPanel>
                                    <StackPanel Height="40" Margin="0,0,0,0" >
                                        <TextBox x:Name="txtWidth" Text="720" HorizontalAlignment="Left" Height="28" Margin="5,0,0,0" TextWrapping="Wrap" Width="44" FontSize="14"/>
                                    </StackPanel>
                                    <StackPanel Height="40" Margin="0,0,0,0" Orientation="Horizontal" Width="120">
                                        <StackPanel Height="40" Margin="0,0,0,0" >
                                            <Label Content="Height" Height="24" Width ="43" HorizontalAlignment="Left" FontSize="14" Margin="4,1,0,3" Padding="0,1,0,0"/>
                                        </StackPanel>
                                        <StackPanel Height="40" Margin="0,0,0,0" >
                                            <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Height="28" Margin="8,0,0,0" TextWrapping="Wrap" Width="47" FontSize="14" IsEnabled="False"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>


                            <StackPanel Orientation="Horizontal">
                                <StackPanel >
                                    <CheckBox x:Name="ChkArRounding" Content="AR Rounding" FontSize="14" HorizontalAlignment="Left" Padding="0,0,0,0" Width="130" VerticalAlignment="Top" IsChecked="True" VerticalContentAlignment="Center" Click="ChkArRounding_Click" />
                                </StackPanel>
                                <StackPanel Height="40" Margin="0,0,0,0" >
                                    <TextBox x:Name="txtARRounding" Height="28" TextWrapping="Wrap" Width="40" FontSize="14" Text="16" IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <GroupBox x:Name="grpProfiles" Header="Profile" HorizontalAlignment="Left" Height="54" Width="389" Margin="4,-16,0,0">
                    <StackPanel Height="40" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,2,0,0">
                        <StackPanel Height="40" Margin="0,0,0,0" />
                        <StackPanel Height="40" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >
                            <ComboBox x:Name="cmbProfile" Height="30" Width="108" FontSize="14" HorizontalAlignment="Left" Margin="5,0,0,0" SelectionChanged="cmbProfile_SelectionChanged" KeyUp="cmbProfile_KeyUp" GotFocus="cmbProfile_GotFocus" />
                        </StackPanel>
                        <StackPanel Height="40" Margin="0,0,0,0" >
                            <Button x:Name="BtnAdd" Content="Add" HorizontalAlignment="Left" Height="30" Margin="5,0,0,0" Width="86" FontSize="14" Click="BtnAdd_Click"/>
                        </StackPanel>
                        <StackPanel Height="40" Margin="0,0,0,0" >
                            <Button x:Name="BtnDel" Content="Del" HorizontalAlignment="Left" Height="30" Margin="5,0,0,0" Width="86" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Height="40" Margin="0,0,0,0" >
                            <Button x:Name="BtnSet" Content="Set" HorizontalAlignment="Left" Height="30" Margin="5,0,0,0" Width="86" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

            </StackPanel>

        </StackPanel>


    </Grid>
</Window>
