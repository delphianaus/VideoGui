<Window x:Class="VideoGui.DirectoryTitleDescEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGui" SizeChanged="Window_SizeChanged"
        xmlns:MSU="clr-namespace:CustomComponents.ListBoxExtensions;assembly=CustomComponents"
         WindowStyle="ToolWindow"  ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen"  
        Title="Directory Title/Desc Editor" Height="450" Width="805">
    <ScrollViewer x:Name="MainScroller" VerticalScrollBarVisibility="Hidden" 
            HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid x:Name="MainGrid" HorizontalAlignment="Left" VerticalAlignment="Top" 
          Width="793" Height="435" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Loading Panel -->
                <RowDefinition Height="Auto"/>
                <!-- Main Content -->
            </Grid.RowDefinitions>
            <Canvas x:Name="LoadingPanel" Height="450" d:Height="0" 
        HorizontalAlignment="Center" Width="805" 
        VerticalAlignment="Top">
                <TextBlock Text="Loading..." FontSize="24" Canvas.Left="311.5" Canvas.Top="141"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" HorizontalAlignment="Left" Canvas.Top="178" 
                     VerticalAlignment="Center" Canvas.Left="261.5"/>
            </Canvas>
            <Canvas x:Name="MainContent" Grid.Row="1" Height="430" 
          HorizontalAlignment="Center" Width="805" VerticalAlignment="Top">
                <MSU:MultiListbox x:Name="msuDirectoryList" ItemHeight="15"
         Header="Directory List Editor" Width="786" Height="370" 
         VerticalAlignment="Top" VerticalContentAlignment="Bottom" 
         HorizontalAlignment="Left" Margin="14,7,0,49" Canvas.Left="0" Canvas.Top="0" >
                    <MSU:MultiListbox.ColumnDefinitions>
                        <MSU:MultiListboxColumnDefinition DataField="Id" Width="0" ComponentType="TextBlock"/>
                        <MSU:MultiListboxColumnDefinition DataField="Directory" 
                         WidthBinding="SourceDirectory"
                         HeaderText="Source Directory" ComponentType="TextBlock"/>
                        <MSU:MultiListboxColumnDefinition HeaderText="Title Id" Width="50" 
                Style="{StaticResource ToggleSetEditStyleID}" HeaderPadding="3,0,0,0"
                 Click="TitleToggle_Click" DataField="IsTitleAvailable" ComponentType="ToggleButton"/>
                        <MSU:MultiListboxColumnDefinition HeaderText="Desc Id" 
                  Width="50" Click="DescToggle_Click" Style="{StaticResource ToggleSetEditStyleID}"
                 DataField="IsDescAvailable" ComponentType="ToggleButton"/>
                    </MSU:MultiListbox.ColumnDefinitions>
                </MSU:MultiListbox>
                <Button x:Name="btnClose" Content="Close" Width="90" Height="30" 
                Click="btnClose_Click" HorizontalAlignment="Right" Canvas.Left="705" Canvas.Top="391"/>
            </Canvas>
        </Grid>
    </ScrollViewer>
</Window>
