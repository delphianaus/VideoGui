<Window x:Class="VideoGui.MultiShortsUploader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGui"
        mc:Ignorable="d"
        Title="Multi Shorts Uploader" Height="276" Width="559">

    <Grid Margin="0,0,0,3">
        <GroupBox Header="Active Shorts Directory" Name="grpshortsdir"
                  BorderBrush="Black" BorderThickness="2"
                  Height="150" VerticalAlignment="Top">
            <Canvas x:Name="cnvshortsdir" Background="Red" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="126" Width="547">
                <ListBox Name="lstShortsDirectoryTitles" Height="30" VerticalAlignment="Center" Canvas.Left="3"
                             Canvas.Top="1" Width="545" HorizontalAlignment="Left">
                    <ListBox.Template>
                        <ControlTemplate x:Name="GridControlss">
                            <DockPanel LastChildFill="True" Margin="0,0,0,0" >
                                <Grid DockPanel.Dock="Top" Height="30" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250*"/>
                                        <ColumnDefinition Width="145"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="Shorts Directory" />
                                    <Label Grid.Column="1" Content="Number of Shorts"/>
                                </Grid>
                                <ItemsPresenter></ItemsPresenter>
                            </DockPanel>
                        </ControlTemplate>
                    </ListBox.Template>
                </ListBox>
                <ListBox x:Name="lstShorts" 
                            Width="547"
                             Canvas.Top="30" Background="Chocolate" 
                          HorizontalAlignment="Center" VerticalAlignment="Top" Height="97">

                    <ListBox.ItemTemplate>
                        <DataTemplate x:Name="GridControlsA" >
                            <Grid Margin="0,2" x:Name="gridwidths">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0"/>
                                    <ColumnDefinition Width="250*" />
                                    <ColumnDefinition Width="145" />
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Id" Grid.Column="0" Margin="4,0,0,0" Width="0" Text="{Binding Id}"/>
                                <TextBlock x:Name="ShortsDirectory" Grid.Column="1" Text="{Binding ShortsDir}"/>
                                <TextBlock x:Name="NumberOfShorts" Grid.Column="2"  Text="{Binding NumberOfShorts}"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Canvas>
        </GroupBox>
    </Grid>
</Window>
